generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Type {
  buy
  rent
}

enum UserType {
  renter
  rentee
  home_seller
  home_buyer
  other
}

enum Property {
  apartment
  house
  condo
  land
}

enum Design {
  bungalow
  cape_Code
  Colonial
  Contemporary
  Craftsman
  French
  Georgian
  Loft
  Modern
  queen_anne
  ranch
  pueblo_style
  Spanish
  split_level
  tudor
  other
}

enum Basement {
  finished
  unfinished
  partially_finished
  none
}

model User {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId
  userType              UserType @default(other)
  username              String @unique
  email                 String @unique
  about                 String?
  firstName             String?
  lastName              String?
  location              String?
  phone                 String?
  password              String
  avatar                String?
  createdAt             DateTime @default(now())
  emailToken            String?
  passwordResetToken    String?
  passwordExpiry        DateTime?
  post                  Post[]
  savedPost             SavedPost[]
  chat                  Chat[] @relation(fields: [chatId], references: [id])
  chatId                String[] @db.ObjectId
  
}

model Post {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId
  title                 String
  price                 Int
  unitArea              Int?
  images                String[]
  country               String?
  state                 String?
  address               String
  city                  String
  bedroom               Int
  bathroom              Int
  longitude             String
  latitude              String
  type                  Type @default(buy)
  property              Property @default(house)
  createdAt             DateTime @default(now())
  user                  User @relation(fields: [userId], references: [id])
  userId                String @db.ObjectId
  description           String
  savedPost             SavedPost[]
  amenities             Amenities?
}

model Amenities {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId
  post                  Post @relation(fields: [postId], references: [id])
  postId                String @unique @db.ObjectId
  roomDetails           RoomDetails?
  utilitiesDetails      UtilitiesDetails?
  buildingDetails       BuildingDetails?
}

model RoomDetails {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId
  amenities             Amenities  @relation(fields: [amenitiesId], references: [id])
  amenitiesId           String @unique @db.ObjectId
  appliances            String[]
  basement              Basement?
  floorCovering         String[]
  rooms                 String[]
  indoorFeatures        String[]
}

model UtilitiesDetails {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId
  amenities             Amenities?  @relation(fields: [amenitiesId], references: [id])
  amenitiesId           String @unique @db.ObjectId
  coolingType           String[]
  heatingType           String[]
  heatingFuel           String[]
}

model BuildingDetails {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId
  amenities             Amenities?  @relation(fields: [amenitiesId], references: [id])
  amenitiesId           String @unique @db.ObjectId
  buildingAmenities     String[]
  architecturalStyle    Design
  exterior              String[]
  numUnit               Int
  numFloor              Int
  outdoorAmenities      String[]
  parking               String[]
  parkingSpace          Int
  roof                  String[]
  view                  String[]
}

model SavedPost {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId
  user                  User @relation(fields: [userId], references: [id])
  userId                String @db.ObjectId
  post                  Post @relation(fields: [postId], references: [id])
  postId                String @db.ObjectId
  createdAt             DateTime @default(now())

  @@unique([userId, postId])
}

model Chat {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId
  user                  User[] @relation(fields: [userId], references: [id])
  userId                String[] @db.ObjectId
  seenBy                String[] @db.ObjectId
  lastMessage           String[]
  createdAt             DateTime @default(now())
  messages              Messages[]

}
model Messages {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId
  userId                String
  chat                  Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  chatId                String @db.ObjectId
  text                  String?
  createdAt             DateTime @default(now())
}


